{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "module": "es2015",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include"
      ],
    "moduleResolution": "node",
    // デコレーターを有効に設定
    "experimentalDecorators": true,
    "paths": {
      "@framework/*": ["src/Framework/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
